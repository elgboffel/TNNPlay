@inherits UmbracoViewPage

<div class="content-video">
    @if (Model.HasValue("contentVideo"))
    {
        <video playsinline autoplay muted loop>
            <source src="@(Model.GetPropertyValue<IPublishedContent>("contentVideo").Url)" type="video/mp4">
        </video>
    }
    <div class="content-video__content">
        <div class="content-video__inner">
            @if (Model.HasValue("trumpet"))
            {
                <div class="content-video__trumpet">@(Model.GetPropertyValue<string>("trumpet"))</div>

            }
            @if (Model.HasValue("number"))
            {
                <div class="content-video__number">@(Model.GetPropertyValue<string>("number"))</div>

            }
            @if (Model.HasValue("heading"))
            {
                <h3 class="content-video__heading">@(Html.Raw(Model.GetPropertyValue<string>("heading")))</h3>

            }
            @if (Model.HasValue("text"))
            {
                <p class="content-video__text">@(Html.Raw(Model.GetPropertyValue<string>("text")))</p>

            }
            <div class="content-video__spacer"></div>
        </div>
    </div>
</div>